# M3U8 Downloader Configuration
# Copy this file to .env and modify the values as needed

# Proxy Configuration
# Set to "true" to disable proxy by default (can be overridden by --no-proxy flag)
DISABLE_PROXY=false

# HTTP Proxy (used when proxy is enabled)
HTTP_PROXY=http://127.0.0.1:7890

# HTTPS Proxy (used when proxy is enabled)
HTTPS_PROXY=http://127.0.0.1:7890

# Global Agent Proxy (for global-agent library)
GLOBAL_AGENT_HTTP_PROXY=http://127.0.0.1:7890
GLOBAL_AGENT_HTTPS_PROXY=http://127.0.0.1:7890

# Download Configuration
# Number of concurrent downloads
CONCURRENT_DOWNLOADS=8

# Output directory (relative to script location)
OUTPUT_DIR=data

# Default video codec (h264 or hevc)
DEFAULT_CODEC=h264

# Default CRF (Constant Rate Factor) value
DEFAULT_CRF=23

# Default preset (encoding speed/efficiency)
DEFAULT_PRESET=medium

# Default audio bitrate
DEFAULT_AUDIO_BITRATE=128k